<div class="bg-info"style="min-height: 80px; padding: 10px">
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
{% if  cmd.solde  == false %}
    <h4>ajoutez des articles</h4>
        <div class="col-lg-8 bg-info ui-widget">
            <input type="text" id="autocomple" style="width:100%">
            <input type="hidden" id="tagshidden">
        </div>
        <div class="col-lg-4 bg-info">
            <input type="submit" class="btn btn-default btn-xs" id="ajoute-article"/>
        </div>    

{% else %}
         
    <div class="col-lg-12 bg-info">
        
        <h3>Detail des Articles</h3>
        
    </div>           
                
                
{% endif %}



    
</div>



<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script>

    var availableTags = [];

availableTags = {%  autoescape false%}{{ obj }} {% endautoescape%};

  $(function() {

    $( "#autocomple" ).autocomplete({
      source: availableTags , 
      select: function (event, ui) {
      	event.preventDefault(); // prevent to replace the text field's value with the value of the selected item
      	$("#tagshidden").val(ui.item.value); // save selected id to hidden input
		$("#autocomple").val(ui.item.label); // display the selected text
	}
    });
  });
  </script>